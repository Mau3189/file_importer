<p id="notice"><%= notice %></p>

<h1>Listing Data Files</h1>

<h4>Import a new file</h4>
<%= form_tag data_files_path, multipart: true, class: 'form-inline' do %>
  <div class="form-group">
    <label for="file">File input</label>
    <%= file_field_tag :file %>
  </div>
  <%= submit_tag "Import file", class: 'btn btn-default' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Filename</th>
      <th>Records</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_files.each do |data_file| %>
      <tr>
        <td><%= data_file.filename %></td>
        <td><%= link_to 'Records', records_data_file_path(data_file) %></td>
        <td><%= link_to 'Edit', edit_data_file_path(data_file) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
