<p id="notice"><%= notice %></p>

<h1>Listing Records</h1>

<table>
  <thead>
    <tr>
      <th>Campaign name</th>
      <th>Impressions</th>
      <th>Clicks</th>
      <th>Cost</th>
      <th>Timestamp</th>
      <th>Datafile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.campaign_name %></td>
        <td><%= record.impressions %></td>
        <td><%= record.clicks %></td>
        <td><%= record.cost %></td>
        <td><%= record.timestamp %></td>
        <td><%= record.datafile %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

